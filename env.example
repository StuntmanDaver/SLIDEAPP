# ============================================================
# Slide App - Environment Variables
# ============================================================
# Copy this file to .env.local and fill in your values
# cp env.example .env.local
# ============================================================

# ====================
# Supabase Configuration
# ====================

# Local Development (Supabase CLI)
# These are the default values when running `supabase start`
SUPABASE_URL=http://127.0.0.1:54321
NEXT_PUBLIC_SUPABASE_URL=http://127.0.0.1:54321
EXPO_PUBLIC_SUPABASE_URL=http://127.0.0.1:54321

# Anon Key (safe to expose, used by clients)
# Get from: `supabase status` after starting local Supabase
SUPABASE_ANON_KEY=your_local_anon_key_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_local_anon_key_here
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_local_anon_key_here

# Service Role Key (NEVER expose to clients, backend only)
# Get from: `supabase status` after starting local Supabase
SUPABASE_SERVICE_ROLE_KEY=your_local_service_role_key_here

# ====================
# Stripe Configuration
# ====================

# Stripe Test Mode Keys
# Get from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here

# Stripe Webhook Secret
# Get from: stripe listen --forward-to localhost:54321/functions/v1/stripe-webhook
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ====================
# QR Token Signing
# ====================

# Secret for signing QR tokens (generate a random 32+ char string)
# IMPORTANT: Must be named QR_TOKEN_SIGNING_SECRET to match Edge Functions
QR_TOKEN_SIGNING_SECRET=your_random_secret_at_least_32_characters_long

# ====================
# App Configuration
# ====================

# Deep Link Scheme
DEEP_LINK_SCHEME=slide://

# App URLs (for web exports)
# Used by Edge Functions for deep link fallbacks
APP_URL=http://localhost:8080
UNIVERSAL_LINK_BASE_URL=http://localhost:8080
ADMIN_URL=http://localhost:3000

# ====================
# Production Override (uncomment for production)
# ====================

# SUPABASE_URL=https://your-project.supabase.co
# NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
# EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_ANON_KEY=your_production_anon_key
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your_production_anon_key
# EXPO_PUBLIC_SUPABASE_ANON_KEY=your_production_anon_key
